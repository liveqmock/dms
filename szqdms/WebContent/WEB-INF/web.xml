<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <filter>
    <filter-name>encodefilter</filter-name>
    <filter-class>com.org.framework.plugin.EncodeFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodefilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>validateSessionDo</filter-name>
    <filter-class>com.org.framework.plugin.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>validateSessionDo</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>validateSessionJsp</filter-name>
    <filter-class>com.org.framework.plugin.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>validateSessionJsp</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>validateSessionAjax</filter-name>
    <filter-class>com.org.framework.plugin.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>validateSessionAjax</filter-name>
    <url-pattern>*.ajax</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FilterDispatcher</filter-name>
    <filter-class>com.org.mvc.FilterDispatcher</filter-class>
    <init-param>
      <param-name>suffix</param-name>
      <param-value>.do;.ajax</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FilterDispatcher</filter-name>
    <url-pattern>*.ajax</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>FilterDispatcher</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>GZipFilter</filter-name>
    <filter-class>com.org.framework.gzip.GZipFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GZipFilter</filter-name>
    <url-pattern>*.css</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GZipFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GZipFilter</filter-name>
    <url-pattern>*.xml</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>GZipFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>GetDicFromTable</servlet-name>
    <servlet-class>com.org.framework.dic.GetDicFromTable</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetDicFromTable</servlet-name>
    <url-pattern>/servlet/GetDicFromTable</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>UploadMobilePicture</servlet-name>
    <servlet-class>com.org.dms.action.mobile.serviceprocessmng.UploadMobilePicture</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadMobilePicture</servlet-name>
    <url-pattern>/mobile/serviceprocessmng/UploadMobilePicture</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <mime-mapping>
    <extension>htc</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>